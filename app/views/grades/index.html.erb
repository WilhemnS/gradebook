<p id="notice"><%= notice %></p>
<p id="alert"><%=alert%></p>

<h1>Sort by:
    <td><%=link_to 'ASC', grades_path(sort: "asc")%></td>
    <td><%=link_to 'DESC', grades_path(sort: "desc")%></td>
</h1>
<h1>Grades</h1>



<table>
  <thead>
    <tr>
      <th>Student ID</th>
      <th>Student name</th>
      <th>Student grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.student_id %></td>
        <td><%= grade.student_name %></td>
        <td><%= grade.student_grade %></td>
        <td><%= link_to 'Show', grade %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
        <%if(current_user.is_teacher)%>
        <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

